<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="?android:listDivider"
    android:showDividers="middle"
    android:dividerPadding="2dp"
    android:minHeight="?android:attr/listPreferredItemHeight">


    <TextView
        android:layout_width="128dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/mintCream"
        android:background="@color/steelBlue"
        android:id="@+id/list_item_date_textview"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/mintCream"
        android:layout_weight="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingRight="16dp"
            android:gravity="right"
            android:layout_weight="2"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/slateGrey"
            android:id="@+id/list_item_calorie_textview"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="right"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/red"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/list_item_fat_textview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/blue"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/list_item_protein_textview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/green"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/list_item_carb_textview"/>

        </LinearLayout>


    </LinearLayout>





</LinearLayout>